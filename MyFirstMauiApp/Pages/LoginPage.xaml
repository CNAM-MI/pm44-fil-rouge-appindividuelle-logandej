<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiApp.Pages.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Label Text="Connexion" FontSize="Title" HorizontalTextAlignment="Center" />
        <Entry x:Name="loginEntry" Placeholder="Nom d'utilisateur" />
        <Entry x:Name="passwordEntry" Placeholder="Mot de passe" IsPassword="True" />
        <Button x:Name="loginButton" Text="Se connecter" Clicked="OnLoginButtonClicked" />
    </VerticalStackLayout>
</ContentPage>